
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th> </th>
    </thead>

    <tbody>
      <% @user.each do |user| %>
        <tr>
          <td><%= user.email %></td>
          <td><%= user.password_digest %></td>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
</table>
